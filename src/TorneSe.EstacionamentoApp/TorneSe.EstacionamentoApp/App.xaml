<Application x:Class="TorneSe.EstacionamentoApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:TorneSe.EstacionamentoApp.Views"
             xmlns:vm="clr-namespace:TorneSe.EstacionamentoApp.ViewModels" 
             >
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:HomeViewModel}">
            <views:HomeView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EntradaVeiculosViewModel}">
            <views:EntradaVeiculosView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SaidaVeiculosViewModel}">
            <views:SaidaVeiculosView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UsuariosViewModel}">
            <views:UsuariosView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ConfiguracoesViewModel}">
            <views:ConfiguracoesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:RelatoriosViewModel}">
            <views:RelatoriosView/>
        </DataTemplate>
    </Application.Resources>
</Application>
